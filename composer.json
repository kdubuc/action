{
    "name": "kdubuc/invocator-php",
    "description": "Handles HTTP requests using stdio",
    "keywords": ["invocator", "psr-15", "psr-7", "stdio", "serverless"],
    "homepage": "https://github.com/kdubuc/invocator-php",
    "license": "MIT",
    "authors": [
        {
            "role": "Developer",
            "name": "Kevin DUBUC",
            "email": "kevindubuc62@gmail.com",
            "homepage": "http://kevindubuc.fr"
        }
    ],
    "require": {
        "php": "^7.3",
        "guzzlehttp/psr7": "^1.5",
        "psr/http-server-handler": "^1.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.0",
        "phpunit/phpunit": "^8.0"
    },
    "autoload": {
        "files": ["src/invoke.php"]
    },
    "scripts": {
        "code:tests": "phpunit tests/",
        "code:fix-cs": "php-cs-fixer fix --config=php-cs-fixer.php"
    },
    "config": {
        "preferred-install": "source",
        "sort-packages": true,
        "optimize-autoloader": true,
        "classmap-authoritative": true,
        "apcu-autoloader": true
    }
}
